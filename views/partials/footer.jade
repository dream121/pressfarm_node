footer
  .container.text-center
    p.pull-left
      a(href='mailto:contact@press.farm')
        span.ion-email  contact@press.farm
    ul.pull-right.list-inline
      li
        a(href='https://www.facebook.com/pages/PressFarm/691425254305421')
          span.ion-social-facebook   thepressfarm
      li
        a(href='https://twitter.com/thepressfarm')
          span.ion-social-twitter   thepressfarm

    #stripeform(style='display:none')
      form#payment-form(action='', method='POST')
        span.payment-errors
        |   
        .form-row
          label
            span Card Number
            |       
            input(type='text', size='20', data-stripe='number')
        |   
        .form-row
          label
            span CVC
            |       
            input(type='text', size='4', data-stripe='cvc')
        |   
        .form-row
          label
            span Expiration (MM/YYYY)
            |       
            input(type='text', size='2', data-stripe='exp-month')
          |     
          span  / 
          |     
          input(type='text', size='4', data-stripe='exp-year')
        |   
        button(type='submit') Submit Payment
